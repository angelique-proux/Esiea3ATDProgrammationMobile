<resources>

    <!-- New themes : bright -->
    <style name="BrightTheme" parent="Base.AppTheme.BrightTheme"/>
    <style name="Base.AppTheme.BrightTheme" parent="Theme.AppCompat.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/green4</item>
        <item name="colorPrimaryVariant">@color/green3</item>
        <item name="colorOnPrimary">@color/green2</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/green1</item>
        <item name="colorSecondaryVariant">@color/green</item>
        <item name="colorOnSecondary">@color/black</item>
    </style>

    <!-- New themes : dark -->
    <style name="DarkTheme" parent="Base.AppTheme.DarkTheme"/>
    <style name="Base.AppTheme.DarkTheme" parent="Theme.AppCompat.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/red4</item>
        <item name="colorPrimaryVariant">@color/red3</item>
        <item name="colorOnPrimary">@color/red2</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/red1</item>
        <item name="colorSecondaryVariant">@color/red</item>
        <item name="colorOnSecondary">@color/black</item>
    </style>
</resources>